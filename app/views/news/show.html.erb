<div class="col-md-6 content-left single-post">
  <div class="blog-posts">
    <h1 class="post"><%= @news.title %></h1>
      <%= t "news.created_at" %>
      <%= @news.created_at %><br>
    <div class="last-article">
      <%= image_tag @news.image.url if @news.image? %>
      <p class="artext"><%= @news.body %></p>
    </div>
  </div>
</div>
<div class="clearfix"></div>
