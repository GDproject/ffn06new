<h1 style="text-align:center; margin-top: 30px; font-family: cursive; "><%= t "users.signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: @user %>

      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.hidden_field :coin, :value => Settings.coin %>

      <%= f.submit t "create" , class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
