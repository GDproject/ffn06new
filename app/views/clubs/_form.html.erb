<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @club, html:{multipart: true} do |f| %>
      <%= render "shared/error_messages", object: @club %>

      <%= f.label :club_name, class: "col-md-4 control-label" %>
      <%= f.text_field :club_name, class: "form-control" %><br>

      <%= f.label :location, class: "col-md-4 control-label" %>
      <%= f.text_field :location, class: "form-control" %><br>

      <%= f. label :stadium, class: "col-md-4 control-label" %>
      <%= f.text_field :stadium, class: "form-control" %><br>

      <%= f.label :coach, class: "col-md-4 control-label" %>
      <%= f.text_field :coach, class: "form-control" %><br>

      <%= f.label :founding, class: "col-md-4 control-label" %>
      <%= f.date_field :founding, placeholder: t("club.date_time_format"),
        class: "form-control" %><br>

      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>

      <%= f.submit %>
    <% end %>
  </div>
</div>
