<hr>
<div class="row">
  <table class="table table-striped table-bordered table-list" style="width:600px; margin-left:300px; ">

      <thead>
        <tr>
            <th></th>
            <th class="hidden-xs" style="width:50%; text-align: center;">Name</th>
        </tr>
      </thead>
      <tbody>
      <% @clubs.each do |club| %>
              <tr>
                <td>
                  <%= link_to club_path(club) do %>
                    <%= image_tag club.image.url if club.image? %>
                  <% end %>
                </td>
                <td class="hidden-xs" style="width:50%; text-align: center;" ><%= link_to club.club_name, club_path(club) %></td>
               <% end %>
            </tbody>
    </table>
    <%= will_paginate @clubs %>


</div>
