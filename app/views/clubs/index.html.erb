<div class="row">
  <% @clubs.each do |club| %>
    <div class="col-sm-3 col-md-4">
      <%= link_to club_path(club) do %>
        <%= image_tag club.image.url if club.image? %>
      <% end %>
      <%= link_to club.club_name, club_path(club) %>
    </div>
  <% end %>
  <%= will_paginate @clubs %>
</div>
