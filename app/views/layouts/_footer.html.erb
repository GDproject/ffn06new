<div class="footer">
  <div class="footer-top">
    <div class="wrap">
      <div class="col-md-3 col-xs-6 col-sm-4 footer-grid">
        <h4 class="footer-head"><%= t "layout.about" %></h4>
        <p><%= t "layout.about_content" %></p>
      </div>
      <div class="col-md-3 col-xs-12 footer-grid">
        <h4 class="footer-head"><%= t "layout.contact" %></h4>
        <span class="hq"><%= t "layout.headquater"%></span>
        <address>
          <ul class="location">
            <li><span class="glyphicon glyphicon-map-marker"></span></li>
            <li><%= t "layout.address" %></li>
            <div class="clearfix"></div>
          </ul>
            <ul class="location">
            <li><span class="glyphicon glyphicon-earphone"></span></li>
            <li><%= t "layout.telephone" %></li>
            <div class="clearfix"></div>
          </ul>
          <ul class="location">
            <li><span class="glyphicon glyphicon-envelope"></span></li>
            <li><%= t "layout.email" %></li>
            <div class="clearfix"></div>
          </ul>
        </address>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="footer-bottom">
    <div class="wrap">
      <div class="copyrights col-md-6">
        <p><%= t "layout.copyrights" %></p>
      </div>
      <div class="footer-social-icons col-md-6">
        <ul>
          <li><a class="facebook" href="#"></a></li>
          <li><a class="twitter" href="#"></a></li>
          <li><a class="flickr" href="#"></a></li>
          <li><a class="googleplus" href="#"></a></li>
          <li><a class="dribbble" href="#"></a></li>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
