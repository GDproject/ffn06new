<h1 style="text-align:center; margin-top: 30px; font-family: cursive; "><%= t "login" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: new_session_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t "login", class: "btn btn-default" %>
    <% end %>

    <p><%= link_to t("users.signup"), new_user_path %></p>
  </div>
</div>
