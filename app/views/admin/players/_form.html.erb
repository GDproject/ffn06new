<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for [:admin, @player], html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: @player %>

      <%= f.label :player_name, class: "col-md-4 control-label" %>
      <%= f.text_field :player_name, class: "form-control" %>

      <%= f.label :nationality, class: "col-md-4 control-label" %>
      <%= f.text_field :nationality, class: "form-control" %>

      <%= f. label :position, class: "col-md-4 control-label" %>
      <%= f.text_field :position, class: "form-control" %>

      <%= f.label :weight, class: "col-md-4 control-label" %>
      <%= f.text_field :weight, class: "form-control" %>

      <%= f.label :height, class: "col-md-4 control-label" %>
      <%= f.text_field :height, class: "form-control" %>

      <%= f.label :club_id, class: "col-md-4 control-label" %>
      <%= f.collection_select :club_id, @clubs, :id, :club_name,
        prompt: true %>

      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>

      <%= f.submit %>
    <% end %>
  </div>
</div>
