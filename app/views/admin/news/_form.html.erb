<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @news], html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: @news %>

      <%= f.label :title, class: "col-md-4 control-label" %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :body, class: "col-md-4 control-label" %>
      <%= f.text_field :body, class: "form-control" %>

      <%= f.hidden_field :user_id, :value => session[:user_id] ,class: "form-control" %>

      <%= f.label :category_news_id, class: "col-md-4 control-label" %>
      <%= f.collection_select :category_news_id, @category_news, :id, :category_name,
        prompt: true %>

      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>

      <%= f.submit %>
    <% end %>
  </div>
</div>
