<div class="col-md-6 content-left single-post">
  <div class="blog-posts">
    <h1 class="post"><%= @news.title %></h1>
      <% if current_user.isadmin? %>
        <%= link_to t("news.edits"), edit_admin_news_path%>
        <%= link_to t("news.delete"), admin_news_path, method: :delete,
          data: {confirm: t("news.sure")} %>
      <% end %>

      <%= t "news.created_at" %><%= @news.created_at %>
    <div class="last-article">
      <%= image_tag @news.image.url if @news.image? %>
      <p class="artext"><%= @news.body %></p>
    </div>
  </div>
</div>
<div class="clearfix"></div>

