<hr>
<div class="row">
  <table class="table table-striped table-bordered table-list" style="width:600px; margin-left:300px; ">
      <thead>
        <tr>
            <th></th>
            <th class="hidden-xs" style="width:50%; text-align: center;">Name</th>
        </tr>
      </thead>
      <tbody>
      <% @players.each do |player| %>
              <tr>
                <td>
                  <%= link_to player_path(player) do %>
                    <%= image_tag player.image.url if player.image? %>
                  <% end %>
                </td>
                <td class="hidden-xs" style="width:50%; text-align: center;" ><%= link_to player.player_name, player_path(player) %></td>
               <% end %>
            </tbody>
    </table>
    <%= will_paginate @players %>


</div>
