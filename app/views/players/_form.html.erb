<%= form_for @player, html: {multipart: true} do |f| %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= pluralize @player.errors.count, t("player.error_form") %>.
    </div>
    <% @player.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
  <%= f.label :player_name %>
  <%= f.text_field :player_name %>

  <%= f.label :nationality %>
  <%= f.text_field :nationality %>

  <%= f. label :position %>
  <%= f.text_field :position %>

  <%= f.label :weight %>
  <%= f.text_field :weight %>

  <%= f.label :height %>
  <%= f.text_field :height %>

  <%= f.label :club_id %>
  <%= f.select :club_id, @clubs.collect{|player| [player.club_name,player.id]},
    prompt: t("player.select_club") %>
  <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>

  <%= f.submit %>
<% end %>
